{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install --prefer-offline --no-audit --no-fund && npm run build --workspace server",
    "env": {
      "NODE_ENV": "production",
      "NPM_CONFIG_PRODUCTION": "true",
      "CI": "true"
    }
  },
  "start": {
    "command": "npm start --workspace server"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE"
  }
}
